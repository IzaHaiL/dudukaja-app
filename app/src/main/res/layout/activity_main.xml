<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191A19"
    tools:context=".MainActivity">




  <ImageView
        android:id="@+id/imageView"
        android:layout_width="318dp"
        android:layout_height="318dp"
        android:layout_marginTop="82dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/duduk" />

    <TextView
        android:id="@+id/Hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Hallo Selamat Datang"
        android:textSize="24dp"
        android:textColor="#CBDACB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

  <TextView
      android:id="@+id/descH"
      android:layout_width="323dp"
      android:layout_height="106dp"
      android:layout_marginTop="4dp"
      android:gravity="center"
      android:justificationMode="inter_word"
      android:text="@string/penjelasan"
      android:textColor="#CBDACB"
      android:textSize="14dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/Hello" />

  <Button
      android:id="@+id/masuk"
      android:layout_width="253dp"
      android:layout_height="60dp"
      android:layout_marginTop="36dp"
      android:backgroundTint="@color/primary2"
      android:onClick="@masuk"
      android:text="Masuk"
      android:textColor="#D8E9A8"
      android:textSize="20dp"
      app:cornerRadius="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.496"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/descH"
      tools:ignore="OnClick" />

</androidx.constraintlayout.widget.ConstraintLayout>